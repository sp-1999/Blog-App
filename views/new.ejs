<% include partials\header %>
<div class="ui main text container segment">
    <dir class="ui huge header">New Blog</dir>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title">
        </div>
        <div class="field">
            <label>Image Url</label>
            <input type="text" name="blog[image]" placeholder="Image url">
        </div>
        <div class="field">
            <label>Blog Post</label>
            <textarea rows="4" name="blog[body]" placeholder="Blog post goes here"></textarea>
        </div>
        <button class="ui inverted blue button" type="submit">Submit</button>
    </form>
</div>
<% include partials\footer %>