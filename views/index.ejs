<% include partials\header %>
<div class="ui main text container">
    <div class="ui huge header">Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="ui medium image">
                    <img class="item" src="<%=blog.image%>" style="width:300px;height:200px;">
                </div>
                <div class="content">
                    <div class="header">
                        <a class="header" href="/blogs/<%=blog._id%>"><%= blog.title %></a>
                    </div>
                    <div class="meta">
                        <span><%=blog.created.toDateString()%></span>
                    </div>
                    <div class="description">
                        <p><%=blog.body.substring(0,100)%> ...</p>
                    </div>
                    <div class="extra">
                            <a class='ui inverted green button' href="/blogs/<%=blog._id%>">Read More</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>
<% include partials\footer %>
